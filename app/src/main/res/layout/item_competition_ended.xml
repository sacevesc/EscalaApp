<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:scrollbarStyle="outsideOverlay"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:id="@+id/item_ended_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/five">

        <LinearLayout
            android:id="@+id/item_ended_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_gym_profile_picture"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:src="@drawable/ameyalli"></ImageView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/ten"
                android:layout_weight="0.8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_comp_ended_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/item_comp_ended_gym"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary" />

            </LinearLayout>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/five"
                android:layout_weight="0.29"
                android:background="@color/colorPrimary"
                android:text="@string/competitions_ended_results"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/item_comp_ended_entrants_image"
            android:layout_width="15dp"
            android:layout_height="22dp"
            android:layout_below="@id/item_ended_info"
            android:layout_marginLeft="@dimen/ten"
            android:background="@drawable/climber"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/item_comp_ended_entrants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_comp_ended_entrants_image"
            android:layout_marginLeft="@dimen/ten"
            android:layout_toEndOf="@+id/item_comp_ended_entrants_image"
            android:textColor="@color/colorPrimaryDark" />

        <ImageView
            android:id="@+id/item_comp_ended_date_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/item_ended_info"
            android:layout_marginStart="@dimen/twenty"
            android:layout_toEndOf="@+id/item_comp_ended_entrants"
            android:background="@drawable/calendar"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/item_comp_ended_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_comp_ended_entrants_image"
            android:layout_below="@id/item_ended_info"
            android:layout_marginLeft="@dimen/eight"
            android:layout_toEndOf="@+id/item_comp_ended_date_image"
            android:gravity="bottom" />


    </RelativeLayout>

</android.support.v7.widget.CardView>
